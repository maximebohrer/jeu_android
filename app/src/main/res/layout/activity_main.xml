<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/etoilefond">

        <ImageView
            android:id="@+id/tie"
            android:layout_width="160dp"
            android:layout_height="99dp"
            app:srcCompat="@drawable/tie" />

        <ImageView
            android:id="@+id/explosion"
            android:layout_width="160dp"
            android:layout_height="99dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/explosion" />

        <ImageView
            android:id="@+id/asteroidLine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/asteroid1" />

        <ImageView
            android:id="@+id/asteroidArc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/asteroid2" />

        <ImageView
            android:id="@+id/asteroidSerpent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/asteroid4" />

        <ImageView
            android:id="@+id/asteroidFocus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/asteroid3" />

        <ImageView
            android:id="@+id/padExt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pad_exterior" />

        <ImageView
            android:id="@+id/padInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pad_center" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:text="0"
            android:textColor="@color/white" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>